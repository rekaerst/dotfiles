#!/usr/bin/bash
PYLIBS=(
	taichi # high-performance numerical computation
	vispy
	litecli
	pyxel # retro game engine
	manim # animation library
	pip
	grpi                   # markdown server
	fake-bpy-module-latest # blender stubs
	pygments-style-onedark
	tinydb
	dash # analytical web apps
)

GOBINARY=(
	github.com/cosmos72/gomacro
	github.com/traefik/yaegi/cmd/yaegi
	github.com/gopherdata/gophernotes
)

#flags
all=0
system=0
pip_=0
npm_=0

if (($# == 0)); then
	all=1
fi

while getopts ":aspngh" opt; do
	case "$opt" in
	a) all=1 ;;
	s) system=1 ;;
	p) pip_=1 ;;
	n) npm_=1 ;;
	g) go_=1 ;;
	h | ?)
		echo "\
Usage: $0 [options]

Options:
-a		all
-s		system package
-p		python package
-n		npm
-g		go binary
"
		exit
		;;
	esac
done

package() {
	if hash yay 2>/dev/null; then
		yay
	elif hash pacman 2>/dev/null; then
		sudo pacman -Syu
	fi
}
pip_update() {
	pip install "${PYLIBS[@]}" -U
}
npm_update() {
	npm -g up
}

go_update() {
	for p in "${GOBINARY[@]}"; do
		go install "$p@latest"
	done
}

((system)) || ((all)) && package
((pip_)) || ((all)) && pip_update
((npm_)) || ((all)) && npm_update
((go_)) || ((all)) && go_update
