{{- $email := "" -}}
{{- $name := "" -}}

{{- if hasKey . "email" -}}
{{-   $email = .email -}}
{{- else -}}
{{-   $email = promptString "email" -}}
{{- end -}}

{{- if hasKey . "name" -}}
{{-   $name = .name -}}
{{- else -}}
{{-   $name = promptString "name" -}}
{{- end -}}

encryption = "age"

[data]
email = {{ $email | quote }}
name = {{ $name | quote }}

